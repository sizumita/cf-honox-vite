{
  "name": "cf-honox-vite",
  "version": "0.0.1",
  "description": "Miniflare-based dev server adapter for HonoX + Vite (cloudflare:workers safe)",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "vite --config example/vite.config.ts --root example",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "miniflare": "^4.20260131.0",
    "minimatch": "^9.0.5"
  },
  "peerDependencies": {
    "hono": "^4.0.0",
    "honox": "^0.1.0",
    "vite": "^5.0.0 || ^6.0.0 || ^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.0",
    "hono": "^4.6.0",
    "honox": "^0.1.53",
    "typescript": "^5.6.3",
    "vite": "^7.0.0"
  },
  "engines": {
    "node": ">=18.18"
  }
}
